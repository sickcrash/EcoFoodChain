PORT=3000
NODE_ENV=development

# PostgreSQL connection
PGHOST=localhost
PGPORT=5432
PGDATABASE=refood
PGUSER=postgres
PGPASSWORD=change_me
PGPOOL_MAX=10
PGPOOL_IDLE=30000

# JWT / Auth
JWT_SECRET=please_set_a_strong_secret
ACCESS_TOKEN_EXPIRATION=2h
REFRESH_TOKEN_EXPIRATION=7d

# App config
CORS_ORIGIN=*
LOG_LEVEL=info
API_PREFIX=/api/v1
ENABLE_SCHEDULER=true
ENABLE_WEBSOCKET=true
HTTP_DEBUG_LOG=false
LOG_TO_FILES=false
LOG_FILES_DIR=./logs
ENABLE_DEBUG_ROUTES=false
UPLOADS_DIR=

# Schedulers
SEGNALAZIONI_CLEANUP_CRON=0 3 * * *
SEGNALAZIONI_RETENTION_DAYS=7

# Geocoding (Google)
# Set either one as needed; keep these out of VCS
GOOGLE_MAPS_API_KEY=
GOOGLE_GEOCODING_API_KEY=
